										ng-click='nav("client")') {{ui.teamup.clients}}
									li(role="presentation",
										data-match-route='/manage',
										ng-if='(app.domainPermission.tasks && app.resources.role == 1) || (app.resources.role == 1 && app.resources.teamUuids.length == 0)')
										a(href='#manage',
