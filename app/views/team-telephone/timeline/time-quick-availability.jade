div.btn-group.pull-right
	button.btn.btn-success(type='submit',
	ng-click='toggleSlotForm()',
	class="{{(views.slot.add==true) && 'active'}}")
		| {{ui.agenda.newAvail}}
	button.btn.btn-success.dropdown-toggle(data-toggle='dropdown')
		span.caret
	ul.dropdown-menu.fast-availability(style='right: 0; font-size: 13px;')
		li
			a(ng-click='setAvailability(true, 1)')
				.square.available
				| {{ ui.teamup.stateValue.reachable }} (1 {{ ui.teamup.hour }})
		li
			a(ng-click='setAvailability(true, 4)')
				.square.available
				| {{ ui.teamup.stateValue.reachable }} (4 {{ ui.teamup.hour }})
		li
			a(ng-click='setAvailability(true, 6)')
				.square.available
				| {{ ui.teamup.stateValue.reachable }} (6 {{ ui.teamup.hour }})
		li
			a(ng-click='setAvailability(true, 8)')
				.square.available
				| {{ ui.teamup.stateValue.reachable }} (8 {{ ui.teamup.hour }})
		li
			a(ng-click='setAvailability(true, 16)')
				.square.available
				| {{ ui.teamup.stateValue.reachable }} (16 {{ ui.teamup.hour }})
		li
			a(ng-click='setAvailability(true, 24)')
				.square.available
				| {{ ui.teamup.stateValue.reachable }} (24 {{ ui.teamup.hour }})
		li.divider
		li
			a(ng-click='setAvailability(false, 1)')
				.square.unavailable
				| {{ ui.teamup.stateValue.not_reachable }} (1 {{ ui.teamup.hour }})
		li
			a(ng-click='setAvailability(false, 4)')
				.square.unavailable
				| {{ ui.teamup.stateValue.not_reachable }} (4 {{ ui.teamup.hour }})
		li
			a(ng-click='setAvailability(false, 6)')
				.square.unavailable
				| {{ ui.teamup.stateValue.not_reachable }} (6 {{ ui.teamup.hour }})
		li
			a(ng-click='setAvailability(false, 8)')
				.square.unavailable
				| {{ ui.teamup.stateValue.not_reachable }} (8 {{ ui.teamup.hour }})
		li
			a(ng-click='setAvailability(false, 16)')
				.square.unavailable
				| {{ ui.teamup.stateValue.not_reachable }} (16 {{ ui.teamup.hour }})
		li
			a(ng-click='setAvailability(false, 24)')
				.square.unavailable
				| {{ ui.teamup.stateValue.not_reachable }} (24 {{ ui.teamup.hour }})
